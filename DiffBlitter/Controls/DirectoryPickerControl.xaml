<UserControl x:Class="DiffBlitter.Controls.DirectoryPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiffBlitter.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">

		<DockPanel>
			<Button Name="Browse" DockPanel.Dock="Right" Content="Browse..." Margin="5, 0, 0, 0" Click="BrowseClick" />
			<TextBox Name="Directory" Width="Auto" TextChanged="DirectoryChange"/>
		</DockPanel>

</UserControl>
